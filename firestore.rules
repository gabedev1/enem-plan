rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que cada usuário só acesse seus próprios planos
    match /users/{userId}/studyPlans/{planId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow write: if request.resource.data.keys().hasAll(['plan', 'week']) &&
                request.resource.data.plan is map &&
                request.resource.data.week is int &&
                request.auth != null && request.auth.uid == userId;
    }
  }
}
